<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentCallRoll" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/day_primary</item>
        <item name="colorPrimaryVariant">@color/day_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/day_text</item>
        <item name="colorSecondaryVariant">@color/day_text_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/day_dark_darker</item>
        <!-- Customize your theme here. -->
        <item name="bg_top_login">@drawable/bg_top_login_light</item>
        <item name="bg_top_index">@drawable/bg_top_index_light</item>
        <item name="bg_bottom_index">@drawable/bg_bottom_index_light</item>
        <item name="bg_top_list">@drawable/bg_top_list_light</item>
        <item name="bg_input">@drawable/bg_input_light</item>
        <item name="bg_button">@drawable/bg_button_light</item>
    </style>
</resources>